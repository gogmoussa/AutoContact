@model AutoContact.Models.PurchaseOrderLineItem

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <style>
        body {
            color: #8e9194;
            background-color: #f4f6f9;
        }

        .text-muted {
            color: #aeb0b4 !important;
        }

        .text-muted {
            font-weight: 300;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div>
                <h1>Delete Purchase Order Line Item</h1>
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PurchaseOrder)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PurchaseOrderId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Part)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Part.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Qty)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Qty)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="PurchaseOrderLineItemId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>