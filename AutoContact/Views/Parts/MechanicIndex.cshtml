@model IEnumerable<AutoContact.Models.Part>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <style>
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1>Parts</h1>

        <a type="button" class="btn btn-outline-primary mt-2 mb-2"><i class="bi bi-plus"></i>Request Inventory/Generate Purchase Order</a>
        <table class="table text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PartId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CostPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReorderQty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EconomicalOrderQty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QtyOnHand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QtyOnOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CostPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReorderQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EconomicalOrderQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QtyOnHand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QtyOnOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        <a asp-action="MechanicDetails" asp-route-id="@item.PartId"><i class="bi bi-three-dots-vertical"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>