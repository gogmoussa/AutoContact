@model AutoContact.Models.Client

@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <style>
        body {
            color: #8e9194;
            background-color: #f4f6f9;
        }

        .avatar-xl img {
            width: 110px;
        }

        .rounded-circle {
            border-radius: 50% !important;
        }

        img {
            vertical-align: middle;
            border-style: none;
        }

        .text-muted {
            color: #aeb0b4 !important;
        }

        .text-muted {
            font-weight: 300;
        }

        .form-control {
            display: block;
            width: 100%;
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            font-weight: 400;
            line-height: 1.5;
            color: #4d5154;
            background-color: #ffffff;
            background-clip: padding-box;
            border: 1px solid #eef0f3;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <form>
                <div class="row mt-5 align-items-center">
                    <div class="col-md-3 text-center mb-5">
                        <div class="avatar avatar-xl">
                            <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="..." class="avatar-img rounded-circle" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="row align-items-center">
                            <div class="col-md-7">
                                <h4 class="mb-1">@Html.DisplayFor(model => model.FirstName), @Html.DisplayFor(model => model.LastName)</h4>
                                <p class="small mb-3"><span class="badge badge-dark">@Html.DisplayFor(model => model.Email)</span></p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-5">
                                <p class="small mb-0 text-muted">@Html.DisplayFor(model => model.Address.StreetNum) @Html.DisplayFor(model => model.Address.StreetName), @Html.DisplayFor(model => model.Address.CityName), @Html.DisplayFor(model => model.Address.ProvinceName)</p>
                                <p class="small mb-0 text-muted">@Html.DisplayFor(model => model.PhoneNum)</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <hr class="my-4" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" id="firstName" placeholder=" @Html.DisplayFor(model => model.FirstName)" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="@Html.DisplayFor(model => model.LastName)" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="@Html.DisplayFor(model => model.Email)" readonly />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="phone">Phone</label>
                            <input type="tel" class="form-control" id="phone" placeholder="@Html.DisplayFor(model => model.PhoneNum)" readonly />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="birthDate">Date Of Birth</label>
                            <input type="text" class="form-control" id="birthDate" placeholder="@Html.DisplayFor(model => model.BirthDate)" readonly/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="driverLicense">Driver License</label>
                            <input type="text" class="form-control" id="birthDate" placeholder="@Html.DisplayFor(model => model.DriverLicence)" readonly />
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Address -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="streetNum">Street Number</label>
                            <input type="text" class="form-control" id="streetNum" placeholder="@Html.DisplayFor(model => model.Address.StreetNum)" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="streetName">Street Name</label>
                            <input type="text" class="form-control" id="streetName" placeholder="@Html.DisplayFor(model => model.Address.StreetName)" readonly>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="unitNum">Unit Number</label>
                            <input type="text" class="form-control" id="unitNum" placeholder="@Html.DisplayFor(model => model.Address.UnitNum)" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cityName">City Name</label>
                            <input type="text" class="form-control" id="cityName" placeholder="@Html.DisplayFor(model => model.Address.CityName)" readonly>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="province">State/Province/Territory</label>
                            <input type="text" class="form-control" id="province" placeholder="@Html.DisplayFor(model => model.Address.ProvinceName)" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="country">Country</label>
                            <input type="text" class="form-control" id="province" placeholder="@Html.DisplayFor(model => model.Address.Country)" readonly>
                        </div>
                    </div>
                </div>
                <br />
                <div>
                    <button class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ClientId">Edit</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>