@{
    string layout = "";
    string authLevel = "Admin"; //need to actually set this once user logs in 

    switch (authLevel)
    {
        case "Client":
            layout = "~/Views/Shared/_ClientLayout.cshtml";
            break;

        case "Mechanic":
            layout = "~/Views/Shared/_MechanicLayout.cshtml";
            break;

        case "Admin":
            layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;

        default:
            layout = "~/Views/Shared/_ClientLayout.cshtml";
            break;
    }

    Layout = layout;
}
