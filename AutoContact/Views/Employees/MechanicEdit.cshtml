@model AutoContact.Models.Employee

@{
    ViewData["Title"] = "MechanicEditEdit";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <style>
        body {
            color: #8e9194;
            background-color: #f4f6f9;
        }

        .avatar-xl img {
            width: 110px;
        }

        .rounded-circle {
            border-radius: 50% !important;
        }

        img {
            vertical-align: middle;
            border-style: none;
        }

        .text-muted {
            color: #aeb0b4 !important;
        }

        .text-muted {
            font-weight: 300;
        }

        .form-control {
            display: block;
            width: 100%;
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            font-weight: 400;
            line-height: 1.5;
            color: #4d5154;
            background-color: #ffffff;
            background-clip: padding-box;
            border: 1px solid #eef0f3;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="row mt-5 align-items-center">
                <div class="col-md-3 text-center mb-5">
                    <div class="avatar avatar-xl">
                        <img src="https://bootdey.com/img/Content/avatar/avatar5.png" alt="..." class="avatar-img rounded-circle" />
                    </div>
                </div>
                <div class="col">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h4 class="mb-1">@Html.DisplayFor(model => model.FirstName), @Html.DisplayFor(model => model.LastName)</h4>
                            <p class="small mb-3"><span class="badge badge-dark">@Html.DisplayFor(model => model.Email)</span></p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-5">
                            <p class="small mb-0 text-muted">@Html.DisplayFor(model => model.Address.StreetNum) @Html.DisplayFor(model => model.Address.StreetName), @Html.DisplayFor(model => model.Address.CityName), @Html.DisplayFor(model => model.Address.ProvinceName)</p>
                            <p class="small mb-0 text-muted">@Html.DisplayFor(model => model.PhoneNum)</p>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <form asp-action="MechanicEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeId" />
                <div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PhoneNum"></label>
                            <input asp-for="PhoneNum" class="form-control" />
                            <span asp-validation-for="PhoneNum" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Address -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Address.StreetNum"></label>
                            <input asp-for="Address.StreetNum" class="form-control" />
                            <span asp-validation-for="Address.StreetNum" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Address.StreetName"></label>
                            <input asp-for="Address.StreetName" class="form-control" />
                            <span asp-validation-for="Address.StreetName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Address.UnitNum"></label>
                            <input asp-for="Address.UnitNum" class="form-control" />
                            <span asp-validation-for="Address.UnitNum" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Address.CityName"></label>
                            <input asp-for="Address.CityName" class="form-control" />
                            <span asp-validation-for="Address.CityName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Address.ProvinceName"></label>
                            <input asp-for="Address.ProvinceName" class="form-control" />
                            <span asp-validation-for="Address.ProvinceName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Address.Country"></label>
                            <input asp-for="Address.Country" class="form-control" />
                            <span asp-validation-for="Address.Country" class="text-danger"></span>
                        </div>
                        @Html.Hidden("HashPass")
                        @Html.Hidden("HashSalt")
                        @Html.Hidden("Address.AddressId")
                        @Html.Hidden("AddressId")
                        @Html.Hidden("EmployeeSin")
                    </div>
                </div>
                <br />
                <div>
                    <button class="btn btn-primary" type="submit" value="Save">Save</button>
                    <a class="btn btn-outline-secondary" asp-action="MechanicDetails" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
