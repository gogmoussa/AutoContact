@model IEnumerable<AutoContact.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <style>
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1>Purchase Orders</h1>

        <a type="button" class="btn btn-outline-primary mt-2 mb-2" asp-action="Create"><i class="bi bi-plus"></i> New Purchase Order</a>
        <table class="table text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PurchaseOrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PODate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CancelledDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseOrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor.Name)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PODate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CancelledDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PurchaseOrderId"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.PurchaseOrderId"><i class="bi bi-trash"></i></a>
                        <a asp-action="Details" asp-route-id="@item.PurchaseOrderId"><i class="bi bi-three-dots-vertical"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>